<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnVideoSplits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Load Video Splits" />

    <Button
        android:id="@+id/btnViewVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="View Video" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Which do\nyou\nprefer?"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ivWigOne"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:src="@drawable/short_hairstyles_001_wig" />

        <ImageView
            android:id="@+id/ivWigTwo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:src="@drawable/cool_mens_curly_hairstyles_wig" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ProgressBar
            android:id="@+id/pBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivVideoSeeker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77FF4081"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnApplyWig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:text="Apply Wig" />

    </FrameLayout>
</LinearLayout>